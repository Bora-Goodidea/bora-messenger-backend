        "mysql2": "3.6.0",
        "path": "0.12.7",
        "pug": "3.0.2",
        "reflect-metadata": "0.1.13",
        "typeorm": "0.3.17",
        "winston": "3.10.0"
    },
    "devDependencies": {
        "@babel/cli": "7.22.10",
        "@babel/core": "7.22.11",
        "@babel/node": "7.22.10",
